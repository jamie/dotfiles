# .zshenv -- loaded every zsh
# Environment variables which need to be updated frequently
# eg. path, aliases, dependent items

export ZDOTDIR=$HOME/.config/zsh

# XDG Base Directory Specification
# https://specifications.freedesktop.org/basedir-spec/basedir-spec-latest.html
# Set values to defaults for Version 0.8
export XDG_CACHE_HOME=$HOME/.cache
export XDG_CONFIG_HOME=$HOME/.config
export XDG_DATA_HOME=$HOME/.local/share
export XDG_STATE_HOME=$HOME/.local/state
export XDG_DATA_DIRS=/usr/local/share/:/usr/share/
export XDG_CONFIG_DIRS=/etc/xdg
export XDG_RUNTIME_DIR=~/.xdg

# Allow chdir to root dirs from anywhere
export CDPATH=.:~

# NOTE: Avoiding writing `path` or `PATH` here, I have a work
#       machine that annoyingly forces a path via /etc/zprofile
#       so instead I'm managing paths in my .zprofile.

# ssh
export SSH_KEY_PATH="~/.ssh/identity"
